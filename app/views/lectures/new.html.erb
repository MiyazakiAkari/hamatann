<body>
  <div class="container">
    <h1 class="my-4">新しい授業を作成</h1>

    <%= form_for @lecture, html: { class: 'form' } do |f| %>
      <div class="form-group">
        <%= f.label :授業名 %>
        <%= f.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :教員名 %>
        <%= f.text_field :teacher, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :学科 %>
        <%= f.text_field :course, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :前期、後期 %>
        <%= f.text_field :semester, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :曜日 %>
        <%= f.text_field :day, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :コマ %>
        <%= f.text_field :time, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :教室 %>
        <%= f.text_field :where, class: "form-control" %>
      </div>

      <%= f.submit "授業を作成", class: "btn btn-primary" %>
    <% end %>

    <%= link_to '一覧に戻る', lectures_path, class: 'btn btn-secondary mt-4' %>
  </div>

  <!-- Bootstrap JavaScriptを読み込む -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>