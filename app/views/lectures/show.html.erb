<body>
  <div class="container">
    <h1 class="mt-4"><%= @lecture.title %></h1>

    <div class="card mt-4">
      <div class="card-body">
        <h2 class="card-title">授業情報</h2>
        <p class="card-text">講師: <%= @lecture.teacher %></p>
        <p class="card-text">授業名: <%= @lecture.title %></p>
        <p class="card-text">曜日: <%= @lecture.day%></p>
        <p class="card-text">コマ: <%= @lecture.time %></p>
        <p class="card-text">学科: <%= @lecture.course %></p>
        <p class="card-text">編集: <%= @lecture.edited %></p>
        <p class="card-text">教室 <%= @lecture.where %></p>
        <% if @lecture.edited == true %>
          <p class="card-text">編集済み</p>
          <p class="card-text">更新したユーザー:<%= @lecture.updater.name %></p>
        <% end %>
      </div>
    </div>

    <div class="mt-4">
      <%= link_to 'レビューを見る', review_lecture_path(@lecture), class: 'btn btn-primary' %>
    </div>

    <div class="mt-4">
      <%= link_to '一覧に戻る', lectures_path, class: 'btn btn-secondary' %>
    </div>
  </div>

  <!-- Bootstrap JavaScriptを読み込む -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>